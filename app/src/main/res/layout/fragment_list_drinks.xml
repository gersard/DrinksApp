<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.list.ListDrinksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_search_drinks"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_et_search"
            android:drawableEnd="@drawable/ic_search_black"
            android:elevation="4dp"
            android:hint="@string/hint_search_drinks"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/tv_title_favorite_drinks"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/title_favorite_drinks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite_drink_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_drink_list"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layoutAnimation="@anim/drink_list_item_animation" />

        <ProgressBar
            android:id="@+id/pb_favorite_drink_list"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/height_drink_list"/>

        <TextView
            android:id="@+id/tv_title_unfavorite_drinks"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/title_all_drinks" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_unfavorite_drink_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layoutAnimation="@anim/drink_list_item_animation" />

        <ProgressBar
            android:id="@+id/pb_unfavorite_drink_list"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>