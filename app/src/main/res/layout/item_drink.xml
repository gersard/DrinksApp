<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_drink_list"
    android:layout_height="@dimen/height_drink_list"
    android:background="@color/transparent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_drink_title"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/iv_drink_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_drink_title"
        style="@style/DrinkListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        tools:text="PiÃ±a Colada" />

</RelativeLayout>