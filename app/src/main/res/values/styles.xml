<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--         NO TOOLBAR-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--        GENERAL STYLE TEXTVIEWS AND BUTTONS-->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <!--        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->

        <!--        STATUS BAR-->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!--    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">-->
    <!--        <item name="android:fontFamily">sans-serif-light</item>-->
    <!--    </style>-->

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Title" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="textAllCaps">true</item>
        <item name="android:shadowColor">@color/shadow_text</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">5</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubTitle" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="textAllCaps">true</item>
        <item name="android:shadowColor">@color/shadow_text</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">5</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Content" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="DrinkListText" parent="AppTheme">
        <item name="android:shadowColor">@color/shadow_text</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_rating</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

</resources>